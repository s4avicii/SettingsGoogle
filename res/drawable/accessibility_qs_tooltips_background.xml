<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:top="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/bright_foreground_holo_dark"/>
            <corners android:radius="28dp"/>
            <padding android:top="8dp"/>
        </shape>
    </item>
    <item android:gravity="top|center_vertical|center_horizontal|center" android:height="12dp" android:width="12dp" android:top="-6dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@android:color/bright_foreground_holo_dark"/>
            </shape>
        </rotate>
    </item>
</layer-list>
